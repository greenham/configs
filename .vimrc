set nu
set nowrap
set nocompatible
set noautowrite
set autoindent
set hidden
set splitbelow
set showcmd
set showmode
set showmatch
set incsearch
set ruler
set magic
"set ignorecase
"set list
set ttyfast
set report=0
set wrapmargin=1
set history=80
set tabstop=4
set backspace=2
set textwidth=0
set viminfo='20,\"50
set dir=~/.vim/swaps
set backup
set backupdir=~/.vim/backups
"set foldmethod=syntax

"let perl_fold=1
"let perl_include_pod=1
"let perl_want_scope_in_variables=1
"let perl_extended_vars=1
"let perl_string_as_statement=1

"filetype plugin indent on

syntax enable

