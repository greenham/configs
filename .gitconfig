[user]
	name = Chris Ham
	email = github@greenhamsolutions.com
[alias]
	co = checkout
 	st = status
	ci = commit
	showtracking = for-each-ref --format='%(refname:short) -> %(upstream:short)' refs/heads
[apply]
    whitespace = nowarn
[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
	current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[push]
	default = tracking
